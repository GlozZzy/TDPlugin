<local:BaseDialogWindow x:Class="TDPlugin.CommentsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDPlugin"
             mc:Ignorable="d"
             Background="#FFE1E1E1"
             x:Name="This"
             WindowStyle="SingleBorderWindow"

             Title="Issue comments" Width="445" Height="600"
             
             >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style TargetType="Button">
            <Setter Property="Width" Value="145"/>
            <Setter Property="FontFamily" Value="Open Sans"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Open Sans"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="Padding" Value="2 4"/>
        </Style>
    </Window.Resources>
    <!--Title="Add documentation with TDPlugin"-->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="CommentStackPanel" Margin="10">
            
        </StackPanel>
    </ScrollViewer>
</local:BaseDialogWindow>
